<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/fragmentFirst">

    <fragment
        android:id="@+id/fragmentFirst"
        android:name="com.example.planerslubny.FragmentFirst"
        android:label="FragmentFirst" >
        <action
            android:id="@+id/action_fragmentFirst_to_fragmentTwo"
            app:destination="@id/fragmentTwo" />
        <action
            android:id="@+id/action_fragmentFirst_to_fragmentThree"
            app:destination="@id/fragmentThree" />
        <argument
            android:name="guest_list"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/fragmentTwo"
        android:name="com.example.planerslubny.FragmentTwo"
        android:label="FragmentTwo" >
        <action
            android:id="@+id/action_fragmentTwo_to_fragmentFirst"
            app:destination="@id/fragmentFirst" />
        <argument
            android:name="guest_list"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/fragmentThree"
        android:name="com.example.planerslubny.FragmentThree"
        android:label="FragmentThree" >
        <action
            android:id="@+id/action_fragmentThree_to_fragmentFirst"
            app:destination="@id/fragmentFirst" />
        <argument
            android:name="guest_list"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>